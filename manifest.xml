<?xml version="1.0" encoding="UTF-8"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0" xsi:type="TaskPaneApp">
  <Id>f93974ee-eb12-481e-afe0-ef64ab4f36ca</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Your Organization</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  <DisplayName DefaultValue="Email Follow-up Assistant"/>
  <Description DefaultValue="Tracks emails requiring follow-up with AI-powered prioritization"/>
  <IconUrl DefaultValue="https://aliciari.github.io/outlook-followup-addon/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://aliciari.github.io/outlook-followup-addon/assets/icon-80.png"/>
  <SupportUrl DefaultValue="https://aliciari.github.io/outlook-followup-addon"/>
  <AppDomains>
    <AppDomain>https://aliciari.github.io/outlook-followup-addon</AppDomain>
  </AppDomains>
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  <Requirements>
    <Sets DefaultMinVersion="1.1">
      <Set Name="Mailbox" MinVersion="1.1"/>
    </Sets>
  </Requirements>
  <DefaultSettings>
    <SourceLocation DefaultValue="https://aliciari.github.io/outlook-followup-addon/taskpane.html"/>
  </DefaultSettings>
  <Permissions>ReadWriteMailbox</Permissions>
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/appforoffice/1.1" xsi:type="VersionOverridesV1_0">
    <Requirements>
      <bt:Sets DefaultMinVersion="1.1">
        <bt:Set Name="Mailbox" MinVersion="1.1"/>
      </bt:Sets>
    </Requirements>
    <Hosts>
      <Host xsi:type="MailboxHost">
        <DesktopFormFactor>
          <FunctionFile resid="Commands.Url"/>
          <ExtensionPoint xsi:type="MessageReadCommandSurface">
            <OfficeTab id="TabDefault">
              <Group id="msgReadGroup">
                <Label resid="GroupLabel"/>
                <Control xsi:type="Button" id="msgReadOpenPaneButton">
                  <Label resid="TaskpaneButton.Label"/>
                  <Supertip>
                    <Title resid="TaskpaneButton.Label"/>
                    <Description resid="TaskpaneButton.Tooltip"/>
                  </Supertip>
                  <Icon>
                    <bt:Image size="16" resid="Icon.16x16"/>
                    <bt:Image size="32" resid="Icon.32x32"/>
                    <bt:Image size="80" resid="Icon.80x80"/>
                  </Icon>
                  <Action xsi:type="ShowTaskpane">
                    <SourceLocation resid="Taskpane.Url"/>
                  </Action>
                </Control>
              </Group>
            </OfficeTab>
          </ExtensionPoint>
        </DesktopFormFactor>
      </Host>
    </Hosts>
    <Resources>
      <bt:Images>
        <bt:Image id="Icon.16x16" DefaultValue="https://aliciari.github.io/outlook-followup-addon/assets/icon-16.png"/>
        <bt:Image id="Icon.32x32" DefaultValue="https://aliciari.github.io/outlook-followup-addon/assets/icon-32.png"/>
        <bt:Image id="Icon.80x80" DefaultValue="https://aliciari.github.io/outlook-followup-addon/assets/icon-80.png"/>
      </bt:Images>
      <bt:Urls>
        <bt:Url id="Commands.Url" DefaultValue="https://aliciari.github.io/outlook-followup-addon/commands/commands.html"/>
        <bt:Url id="Taskpane.Url" DefaultValue="https://aliciari.github.io/outlook-followup-addon/taskpane.html"/>
      </bt:Urls>
      <bt:ShortStrings>
        <bt:String id="GroupLabel" DefaultValue="Follow-up"/>
        <bt:String id="TaskpaneButton.Label" DefaultValue="Email Follow-ups"/>
      </bt:ShortStrings>
      <bt:LongStrings>
        <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Open the Email Follow-up Assistant to view tracked emails and get prioritized recommendations"/>
      </bt:LongStrings>
    </Resources>
  </VersionOverrides>
</OfficeApp>